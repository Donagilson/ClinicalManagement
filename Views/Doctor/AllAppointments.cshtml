@model List<ClinicalManagementSystem2025.Models.Appointment>
@{
    ViewData["Title"] = "All Appointments";
    Layout = "_DoctorLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="doctor-card">
                <div class="doctor-card-header olive-bg">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-calendar-check me-2"></i>All Appointments
                            </h4>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (ViewBag.StatusStats != null)
                            {
                                foreach (var stat in ViewBag.StatusStats)
                                {
                                    <span class="badge bg-light text-dark me-2">@stat.Key: @stat.Value</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="doctor-card">
                <div class="doctor-card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover doctor-table">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Patient</th>
                                        <th>Contact</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@appointment.AppointmentTime.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <strong>@appointment.Patient.FullName</strong>
                                            </td>
                                            <td>
                                                @appointment.Patient.Phone
                                                <br>
                                                <small class="text-muted">@appointment.Patient.Email</small>
                                            </td>
                                            <td>@appointment.Reason</td>
                                            <td>
                                                <span class="status-badge status-@appointment.Status.ToLower().Replace(" ", "-")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (appointment.Status != "Completed")
                                                {
                                                    <a href="@Url.Action("PatientDetails", new { patientId = appointment.PatientId, appointmentId = appointment.AppointmentId })"
                                                       class="btn btn-olive btn-sm">
                                                        <i class="fas fa-play me-1"></i>Start
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("PatientDetails", new { patientId = appointment.PatientId, appointmentId = appointment.AppointmentId })"
                                                       class="btn btn-olive-outline btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times icon-large text-muted mb-3"></i>
                            <h5 class="text-muted">No Appointments Found</h5>
                            <p class="text-muted">No appointments scheduled for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>