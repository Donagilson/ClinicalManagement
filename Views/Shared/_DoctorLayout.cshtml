<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinical Management System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Doctor CSS -->
    <link href="~/css/doctor.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="doctor-body">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark doctor-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-hospital-alt me-2"></i>
                Clinical Management System
            </a>
            <div class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-md me-1"></i>Dr. @ViewBag.DoctorName
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                    </ul>
                </li>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 doctor-sidebar p-0">
                <nav class="nav flex-column py-3">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                       href="@Url.Action("Dashboard")">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AllAppointments" ? "active" : "")"
                       href="@Url.Action("AllAppointments")">
                        <i class="fas fa-calendar-check me-2"></i>Appointments
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AllPatients" ? "active" : "")"
                       href="@Url.Action("AllPatients")">
                        <i class="fas fa-users me-2"></i>Patients
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AllPrescriptions" ? "active" : "")"
                       href="@Url.Action("AllPrescriptions")">
                        <i class="fas fa-prescription me-2"></i>Prescriptions
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AllLabReports" ? "active" : "")"
                       href="@Url.Action("AllLabReports")">
                        <i class="fas fa-flask me-2"></i>Lab Reports
                    </a>
                </nav>
            </div>
            <!-- Main Content -->
            <div class="col-md-10 py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>