@{
    ViewData["Title"] = "Receptionist Dashboard";
    var todaysAppointments = ViewBag.TodaysAppointments as IEnumerable<Appointment>;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-olive">
            <i class="fas fa-tachometer-alt me-2"></i>Receptionist Dashboard
        </h1>
        <div class="text-muted">
            <i class="fas fa-calendar-day me-1"></i>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Appointment Success Modal -->
    @if (TempData["AppointmentDetails"] != null)
    {
        <div class="modal fade" id="appointmentSuccessModal" tabindex="-1" aria-labelledby="appointmentSuccessModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="appointmentSuccessModalLabel">
                            <i class="fas fa-check-circle me-2"></i>Appointment Successfully Scheduled!
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center mb-3">
                            <i class="fas fa-calendar-check fa-4x text-success mb-3"></i>
                            <h4 class="text-success">Appointment Confirmed</h4>
                        </div>
                        <div class="card border-success">
                            <div class="card-body">
                                <h6 class="card-title text-success">
                                    <i class="fas fa-info-circle me-2"></i>Appointment Details
                                </h6>
                                <div class="appointment-details">
                                    @Html.Raw(TempData["AppointmentDetails"])
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Important:</strong> Please inform the patient to arrive 15 minutes before the scheduled time.
                            A confirmation SMS will be sent to the patient's registered phone number.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-olive dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-olive mb-3"></i>
                    <h5 class="card-title text-olive">Add New Patient</h5>
                    <p class="card-text">Register a new patient in the system</p>
                    <a asp-action="AddPatient" class="btn btn-olive">
                        <i class="fas fa-user-plus me-1"></i>Add Patient
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-olive dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-3x text-olive mb-3"></i>
                    <h5 class="card-title text-olive">Patient List</h5>
                    <p class="card-text">View and manage all registered patients</p>
                    <a asp-action="ListPatients" class="btn btn-olive">
                        <i class="fas fa-list me-1"></i>View Patients
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Appointments -->
    <div class="card shadow-sm">
        <div class="card-header bg-olive text-white d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-calendar-day me-2"></i>Today's Appointments
            </h5>
            <span class="badge bg-light text-olive">@todaysAppointments?.Count() appointments</span>
        </div>
        <div class="card-body">
            @if (todaysAppointments?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="bg-olive text-white">
                            <tr>
                                <th>Time</th>
                                <th>Patient</th>
                                <th>Phone</th>
                                <th>Doctor</th>
                                <th>Specialization</th>
                                <th>Status</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in todaysAppointments)
                            {
                                <tr>
                                    <td>@DateTime.Today.Add(appointment.AppointmentTime).ToString("hh:mm tt")</td>
                                    <td>
                                        <strong>@appointment.PatientName</strong>
                                        <br><small class="text-muted">MMR: CS@(appointment.PatientId.ToString().PadLeft(2, '0'))</small>
                                    </td>
                                    <td>@appointment.PatientPhone</td>
                                    <td>@appointment.DoctorName</td>
                                    <td>@appointment.Specialization</td>
                                    <td>
                                        <span class="badge @(appointment.Status == "Scheduled" ? "bg-primary" :
                                                                                                        appointment.Status == "Completed" ? "bg-success" :
                                                                                                        appointment.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                                    @appointment.Status
                                </span>
                            </td>
                            <td>@appointment.Reason</td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No appointments scheduled for today</h5>
                </div>
            }
        </div>
    </div>
</div>

<!-- Search Patient Modal -->
<div class="modal fade" id="searchPatientModal" tabindex="-1" aria-labelledby="searchPatientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-olive text-white">
                <h5 class="modal-title" id="searchPatientModalLabel">
                    <i class="fas fa-search me-2"></i>Search Patient
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                        <label for="searchTerm" class="form-label">Search by Patient MMR ID (e.g., CS01), Phone Number, Name, or Email</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="searchTerm" placeholder="Enter MMR ID (CS##), phone number, name, or email">
                            <button class="btn btn-olive" type="button" id="btnSearch">
                                <i class="fas fa-search me-1"></i>Search
                            </button>
                        </div>
                        <small class="text-muted">For phone numbers, all patients with the same number will be shown</small>
                    </div>

                    <div id="searchResults" class="mt-3">
                        <!-- Search results will be displayed here -->
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info" id="btnTestSearch">
                    <i class="fas fa-bug me-1"></i>Test Search Endpoint
                </button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Check for auto-search parameter from URL
        $(document).ready(function() {
            var urlParams = new URLSearchParams(window.location.search);
            var autoSearchPhone = urlParams.get('autoSearchPhone');
            if (autoSearchPhone) {
                $('#searchTerm').val(autoSearchPhone);
                $('#searchPatientModal').modal('show');
                setTimeout(function() {
                    $('#btnSearch').click();
                }, 500);
            }
        });

        // Search Patient - Enhanced to handle ID and phone with multiple results
        $('#btnSearch').click(function() {
            console.log('Search button clicked');
            var searchTerm = $('#searchTerm').val().trim();
            console.log('Search term:', searchTerm);

            if (!searchTerm) {
                alert('Please enter search term');
                return;
            }

            // Loading message handled in beforeSend

            console.log('Making AJAX request to:', '@Url.Action("SearchPatientByIdOrPhone", "Receptionist")');

            // Use the enhanced search method that handles both ID and phone
            $.ajax({
                url: '@Url.Action("SearchPatientByIdOrPhoneGet", "Receptionist")',
                type: 'GET',
                data: {
                    searchTerm: searchTerm
                },
                beforeSend: function() {
                    $('#searchResults').html('<div class="text-center"><div class="spinner-border text-olive" role="status"></div><p>Searching...</p></div>');
                }
            })
                .done(function(response) {
                    console.log('AJAX response received:', response);
                    if (response.success) {
                        if (response.patients.length > 0) {
                            var html = '';

                            // Show info if multiple patients found with same phone
                            if (response.patients.length > 1) {
                                html += '<div class="alert alert-info mb-3"><i class="fas fa-info-circle me-1"></i><strong>' + response.patients.length + ' patients found</strong>';
                                // Check if they have the same phone number
                                var firstPhone = response.patients[0].phone;
                                var samePhone = response.patients.every(p => p.phone === firstPhone);
                                if (samePhone) {
                                    html += ' with the same phone number: <strong>' + firstPhone + '</strong>';
                                }
                                html += '</div>';
                            }

                            html += '<div class="list-group">';
                            response.patients.forEach(function(patient) {
                                html += '<div class="list-group-item">';
                                html += '<div class="d-flex w-100 justify-content-between">';
                                html += '<h6 class="mb-1">' + patient.fullName + '</h6>';
                                var mmr = patient.mmrId ? patient.mmrId : ('CS' + String(patient.patientId).padStart(2, '0'));
                                html += '<small>MMR: ' + mmr + '</small>';
                                html += '</div>';
                                html += '<p class="mb-1"><i class="fas fa-phone me-1 text-muted"></i>Phone: ' + patient.phone + '</p>';
                                html += '<p class="mb-1"><i class="fas fa-user me-1 text-muted"></i>Gender: ' + (patient.gender || 'N/A') + ' | <i class="fas fa-birthday-cake me-1 text-muted"></i>Age: ' + (patient.age || 'N/A') + '</p>';
                                html += '<small><i class="fas fa-envelope me-1 text-muted"></i>Email: ' + (patient.email || 'N/A') + '</small>';
                                html += '<div class="mt-2">';
                                html += '<a href="/Receptionist/PatientDetails/' + patient.patientId + '" class="btn btn-sm btn-outline-olive me-1">';
                                html += '<i class="fas fa-eye"></i> View Details</a>';
                                html += '<a href="/Receptionist/ScheduleAppointmentForPhone?phone=' + encodeURIComponent(patient.phone) + '&patientId=' + patient.patientId + '" class="btn btn-sm btn-olive">';
                                html += '<i class="fas fa-calendar-plus"></i> Schedule</a>';
                                html += '</div>';
                                html += '</div>';
                            });
                            html += '</div>';
                            $('#searchResults').html(html);
                        } else {
                            $('#searchResults').html('<div class="alert alert-warning">No patients found with ID or phone number: <strong>' + searchTerm + '</strong><br><a href="/Receptionist/AddPatient" class="alert-link mt-2 d-inline-block">Add new patient</a></div>');
                        }
                    } else {
                        $('#searchResults').html('<div class="alert alert-danger">' + response.message + '</div>');
                    }
                })
                .fail(function(xhr, status, error) {
                    console.log('AJAX request failed:', status, error);
                    console.log('XHR response:', xhr.responseText);
                    $('#searchResults').html('<div class="alert alert-danger">Error searching patients: ' + error + '. Please try again.</div>');
                });
        });

        // Test search endpoint functionality
        $('#btnTestSearch').click(function() {
            console.log('Testing search endpoint...');
            $('#searchResults').html('<div class="text-center"><div class="spinner-border text-info" role="status"></div><p>Testing endpoint...</p></div>');

            $.ajax({
                url: '/Receptionist/TestSearch',
                type: 'GET'
            })
            .done(function(response) {
                console.log('Test response:', response);
                if (response.success) {
                    $('#searchResults').html('<div class="alert alert-success"><strong>Success!</strong> ' + response.message + '<br>Sample Patient: ' + response.samplePatient.fullName + ' (ID: ' + response.samplePatient.patientId + ')</div>');
                } else {
                    $('#searchResults').html('<div class="alert alert-warning">' + response.message + '</div>');
                }
            })
            .fail(function(xhr, status, error) {
                console.log('Test failed:', status, error);
                $('#searchResults').html('<div class="alert alert-danger">Test failed: ' + error + '</div>');
            });
        });

        // Allow Enter key to trigger search in main search modal
        $('#searchTerm').keypress(function(e) {
            if (e.which == 13) {
                $('#btnSearch').click();
            }
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);

        // Show appointment success modal if appointment details exist
        @if (TempData["AppointmentDetails"] != null)
        {
            <text>
            $('#appointmentSuccessModal').modal('show');

            // Play success sound (if browser supports it)
            try {
                var audio = new Audio('data:audio/wav;base64,');
                audio.play();
            } catch(e) {}
            </text>
        }

        // Enter key support for search
        $('#searchTerm').keypress(function(e) {
            if (e.which == 13) {
                $('#btnSearch').click();
            }
        });

        $('#phoneSearch').keypress(function(e) {
            if (e.which == 13) {
                $('#btnPhoneSearch').click();
            }
        });

        // Removed print and SMS helper functions to avoid rendering issues
    </script>
}
