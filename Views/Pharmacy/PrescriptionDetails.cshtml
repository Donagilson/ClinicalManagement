@model ClinicalManagementSystem2025.Models.Prescription

@{
    ViewData["Title"] = "Prescription Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-purple mb-0">
                        <i class="fas fa-prescription-bottle-alt me-2"></i>Prescription Details
                    </h2>
                    <p class="text-muted mb-0">Review and fulfill prescription from doctor</p>
                </div>
                <div>
                    <a asp-action="Prescriptions" class="btn btn-outline-purple me-2">
                        <i class="fas fa-arrow-left me-1"></i>Back to Prescriptions
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home me-1"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Prescription Information -->
            <div class="card shadow-sm border-purple mb-4">
                <div class="card-header bg-purple text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Prescription Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Prescription ID</label>
                                <div class="info-value">#@Model.PrescriptionId</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Status</label>
                                <div class="info-value">
                                    @if (string.IsNullOrWhiteSpace(Model.Status) || Model.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else if (Model.Status == "Fulfilled")
                                    {
                                        <span class="badge bg-success">Fulfilled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Patient ID</label>
                                <div class="info-value">MMR-@Model.PatientId.ToString("000")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Doctor ID</label>
                                <div class="info-value">Dr. #@Model.DoctorId</div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Prescription Date</label>
                                <div class="info-value">@Model.PrescriptionDate.ToString("yyyy-MM-dd hh:mm tt")</div>
                            </div>
                        </div>
                        @if (Model.FulfilledDate.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">Fulfilled Date</label>
                                    <div class="info-value">@Model.FulfilledDate.Value.ToString("yyyy-MM-dd hh:mm tt")</div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Diagnosis))
                    {
                        <div class="mt-3">
                            <div class="info-item">
                                <label class="info-label">Diagnosis</label>
                                <div class="info-value">@Model.Diagnosis</div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="mt-3">
                            <div class="info-item">
                                <label class="info-label">Doctor's Notes</label>
                                <div class="info-value">@Model.Notes</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Prescription Details -->
            @if (ViewBag.PrescriptionDetails != null && ((IEnumerable<ClinicalManagementSystem2025.Models.PrescriptionDetail>)ViewBag.PrescriptionDetails).Any())
            {
                <div class="card shadow-sm border-purple mb-4">
                    <div class="card-header bg-purple text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-pills me-2"></i>Prescribed Medicines
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Medicine</th>
                                        <th>Dosage</th>
                                        <th>Frequency</th>
                                        <th>Duration</th>
                                        <th>Quantity</th>
                                        <th>Instructions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in (IEnumerable<ClinicalManagementSystem2025.Models.PrescriptionDetail>)ViewBag.PrescriptionDetails)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@(detail.MedicineName ?? $"Medicine #{detail.MedicineId}")</strong>
                                            </td>
                                            <td>@(detail.Dosage ?? "As directed")</td>
                                            <td>@(detail.Frequency ?? "As needed")</td>
                                            <td>@(detail.Duration ?? "Until finished")</td>
                                            <td>
                                                <span class="badge bg-info">@detail.Quantity</span>
                                            </td>
                                            <td>@(detail.Instructions ?? "Follow doctor's instructions")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm border-purple mb-4">
                <div class="card-header bg-purple text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (string.IsNullOrWhiteSpace(Model.Status) || Model.Status == "Pending")
                        {
                            <form method="post" asp-action="fulfillPrescription">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="prescriptionId" value="@Model.PrescriptionId" />
                                <button type="submit" class="btn btn-success btn-lg"
                                        onclick="return confirm('Are you sure you want to fulfill this prescription? This will dispense all medicines and update inventory.')">
                                    <i class="fas fa-check me-2"></i>Fulfill Prescription
                                </button>
                            </form>
                        }
                        else if (Model.Status == "Fulfilled")
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-1"></i>
                                <strong>Prescription Fulfilled</strong><br>
                                <small>This prescription has been completed.</small>
                            </div>
                        }

                        <a asp-action="Prescriptions" class="btn btn-outline-purple">
                            <i class="fas fa-arrow-left me-1"></i>Back to All Prescriptions
                        </a>
                    </div>
                </div>
            </div>

            <!-- Prescription Status -->
            <div class="card shadow-sm border-purple">
                <div class="card-header bg-purple text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Prescription Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12">
                            @if (string.IsNullOrWhiteSpace(Model.Status) || Model.Status == "Pending")
                            {
                                <div class="alert alert-warning py-3">
                                    <i class="fas fa-clock fa-2x mb-2"></i>
                                    <h5>Pending Fulfillment</h5>
                                    <p class="mb-0">This prescription is waiting to be fulfilled by the pharmacy.</p>
                                </div>
                            }
                            else if (Model.Status == "Fulfilled")
                            {
                                <div class="alert alert-success py-3">
                                    <i class="fas fa-check-circle fa-2x mb-2"></i>
                                    <h5>Fulfilled</h5>
                                    <p class="mb-0">This prescription has been successfully fulfilled.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.text-purple {
    color: #7b68ee !important;
}

.bg-purple {
    background-color: #7b68ee !important;
}

.border-purple {
    border-color: #7b68ee !important;
}

.btn-purple {
    background-color: #7b68ee;
    border-color: #7b68ee;
    color: white;
}

.btn-purple:hover {
    background-color: #6a5acd;
    border-color: #6a5acd;
    color: white;
}

.btn-outline-purple {
    color: #7b68ee;
    border-color: #7b68ee;
}

.btn-outline-purple:hover {
    background-color: #7b68ee;
    border-color: #7b68ee;
    color: white;
}

.card {
    border-radius: 10px;
}

.info-item {
    padding: 0.75rem;
    background-color: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #7b68ee;
    height: 100%;
}

.info-label {
    font-weight: 600;
    color: #495057;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-value {
    color: #212529;
    font-size: 1rem;
    font-weight: 500;
    word-wrap: break-word;
}

.table th {
    border-top: none;
    font-weight: 600;
}

.badge {
    font-size: 0.8em;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
