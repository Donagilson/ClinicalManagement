@{
    ViewData["Title"] = "Low Stock Alert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-purple mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert
                    </h2>
                    <p class="text-muted mb-0">Medicines and inventory items running low</p>
                </div>
                <div>
                    <a asp-action="Inventory" class="btn btn-outline-info me-2">
                        <i class="fas fa-boxes me-1"></i>Manage Inventory
                    </a>
                    <a asp-action="Index" class="btn btn-outline-purple">
                        <i class="fas fa-arrow-left me-1"></i>Back to Pharmacy
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                    <h5 class="card-title text-danger">@((ViewBag.LowStockMedicines as IEnumerable<dynamic>)?.Count() ?? 0)</h5>
                    <p class="card-text text-muted">Low Stock Medicines</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h5 class="card-title text-warning">@((ViewBag.LowStockInventory as IEnumerable<dynamic>)?.Count() ?? 0)</h5>
                    <p class="card-text text-muted">Inventory Items</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-times fa-2x text-info mb-2"></i>
                    <h5 class="card-title text-info">0</h5>
                    <p class="card-text text-muted">Expiring Soon</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h5 class="card-title text-success">@(((ViewBag.LowStockMedicines as IEnumerable<dynamic>)?.Count() ?? 0) + ((ViewBag.LowStockInventory as IEnumerable<dynamic>)?.Count() ?? 0))</h5>
                    <p class="card-text text-muted">Total Alerts</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Low Stock Medicines -->
    @if (ViewBag.LowStockMedicines != null && ((IEnumerable<dynamic>)ViewBag.LowStockMedicines).Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-pills me-2"></i>Low Stock Medicines
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Medicine</th>
                                        <th>Code</th>
                                        <th>Category</th>
                                        <th>Unit Price</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var medicine in ViewBag.LowStockMedicines)
                                    {
                                        <tr class="table-danger">
                                            <td>
                                                <strong>@medicine.MedicineName</strong>
                                                <br>
                                                <small class="text-muted">@(medicine.GenericName ?? "N/A")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">@medicine.MedicineCode</span>
                                            </td>
                                            <td>@(medicine.Category ?? "General")</td>
                                            <td>â‚¹@medicine.UnitPrice.ToString("F2")</td>
                                            <td>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Low Stock
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@medicine.MedicineId" class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="reorderMedicine(@medicine.MedicineId, '@medicine.MedicineName')">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Low Stock Inventory -->
    @if (ViewBag.LowStockInventory != null && ((IEnumerable<dynamic>)ViewBag.LowStockInventory).Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-boxes me-2"></i>Low Stock Inventory Items
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Medicine</th>
                                        <th>Current Stock</th>
                                        <th>Min Level</th>
                                        <th>Max Level</th>
                                        <th>Batch #</th>
                                        <th>Expiry Date</th>
                                        <th>Supplier</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inventory in ViewBag.LowStockInventory)
                                    {
                                        <tr class="table-warning">
                                            <td>
                                                <strong>@(inventory.Medicine?.MedicineName ?? $"Medicine {inventory.MedicineId}")</strong>
                                                <br>
                                                <small class="text-muted">@(inventory.Medicine?.MedicineCode ?? $"Code: {inventory.MedicineId}")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">@inventory.CurrentStock</span>
                                            </td>
                                            <td>@inventory.MinStockLevel</td>
                                            <td>@inventory.MaxStockLevel</td>
                                            <td>@(inventory.BatchNumber ?? "N/A")</td>
                                            <td>
                                                @if (inventory.ExpiryDate != null && inventory.ExpiryDate is DateTime)
                                                {
                                                    var expiryDate = (DateTime)inventory.ExpiryDate;
                                                    @expiryDate.ToString("yyyy-MM-dd")
                                                    @if (expiryDate < DateTime.Now)
                                                    {
                                                        <span class="badge bg-danger ms-1">Expired</span>
                                                    }
                                                    else if (expiryDate < DateTime.Now.AddMonths(3))
                                                    {
                                                        <span class="badge bg-warning ms-1">Soon</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@(inventory.Supplier ?? "N/A")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="updateStock(@inventory.InventoryId, @inventory.MinStockLevel)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="reorderInventory(@inventory.InventoryId)">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- No Low Stock Message -->
    @if ((ViewBag.LowStockMedicines == null || !((IEnumerable<dynamic>)ViewBag.LowStockMedicines).Any()) &&
         (ViewBag.LowStockInventory == null || !((IEnumerable<dynamic>)ViewBag.LowStockInventory).Any()))
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-success">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h4 class="text-success">All Stock Levels are Good!</h4>
                        <p class="text-muted mb-0">No medicines or inventory items are currently running low.</p>
                        <a asp-action="Index" class="btn btn-purple mt-3">
                            <i class="fas fa-arrow-left me-1"></i>Back to Pharmacy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Reorder Modal -->
<div class="modal fade" id="reorderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reorder Medicine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Reorder functionality would be implemented here.</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-1"></i>
                    In a real implementation, this would create a purchase order or send a reorder request to suppliers.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Create Order</button>
            </div>
        </div>
    </div>
</div>

<style>
.text-purple {
    color: #7b68ee !important;
}

.bg-purple {
    background-color: #7b68ee !important;
}

.border-purple {
    border-color: #7b68ee !important;
}

.btn-purple {
    background-color: #7b68ee;
    border-color: #7b68ee;
    color: white;
}

.btn-purple:hover {
    background-color: #6a5acd;
    border-color: #6a5acd;
    color: white;
}

.btn-outline-purple {
    color: #7b68ee;
    border-color: #7b68ee;
}

.btn-outline-purple:hover {
    background-color: #7b68ee;
    border-color: #7b68ee;
    color: white;
}

.table th {
    border-top: none;
    font-weight: 600;
}

.card {
    border-radius: 10px;
}

.badge {
    font-size: 0.8em;
}
</style>

<script>
function reorderMedicine(medicineId, medicineName) {
    document.getElementById('reorderModal').querySelector('.modal-title').textContent = `Reorder ${medicineName}`;
    new bootstrap.Modal(document.getElementById('reorderModal')).show();
}

function reorderInventory(inventoryId) {
    document.getElementById('reorderModal').querySelector('.modal-title').textContent = 'Reorder Inventory Item';
    new bootstrap.Modal(document.getElementById('reorderModal')).show();
}

function updateStock(inventoryId, minLevel) {
    const newStock = prompt(`Enter new stock level (minimum: ${minLevel}):`);
    if (newStock && parseInt(newStock) >= minLevel) {
        alert(`Stock update functionality would be implemented here for inventory ID: ${inventoryId}`);
    } else if (newStock) {
        alert(`Stock level must be at least ${minLevel}`);
    }
}
</script>
